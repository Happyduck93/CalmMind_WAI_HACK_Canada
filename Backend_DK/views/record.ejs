<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>

    <!-- nav -->
    <%- include('nav.html') %>

    <div class="container" style="max-width: 800px; margin-top: 100px;">

      <h4 class="container mt-4"><strong>Record</strong></h4>

      <div class="container mt-3">
          <!-- post when press submit  -->
          <form action="/add" method="POST">
              <div class="form-group">
                  <label>How was your day?</label>
                  <!-- <input type="text" class="form-control" name="title"> -->
                  <textarea class="form-control mt-2" name="title" rows="10"></textarea>
              </div>
          </form>


          <div id="recordingControls">
            <button class="btn btn-danger btn-sm" id="startRecord">Start Recording</button>
            <button class="btn btn-secondary btn-sm" id="stopRecord" disabled>Stop Recording</button>
            <span id="recordingStatus" style="margin-left: 10px;"></span>
          </div>
          <!-- <audio id="audio" controls></audio> -->

      </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

    <script src="../public/voicerecorder.js"></script>



        
</body>

</html>