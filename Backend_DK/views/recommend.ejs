<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title> Calm Mind | Recommend </title>
  <link rel="shortcut icon" type="image/png" href="../public/img/logo.png">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/styles.css">
  <script src="https://kit.fontawesome.com/a10dc5d5d5.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>

  <!-- nav -->
  <%- include('nav', { isAuthenticated: isAuthenticated }) %>


  <div class="container mt-4">

    <!-- Detected Emotion -->
    <div id="moodText">
      <% if (detected_emotion) { %>
          <%if (detected_emotion == "happy") { %>
              <h2>Detected Emotion: <strong style="color: #4CAF50;"><%= detected_emotion %></strong></h2>
          <% } else if (detected_emotion == "neutral") { %>
              <h2>Detected Emotion: <strong style="color: yellow;"><%= detected_emotion %></strong></h2>
          <% } else { %>
              <h2>Detected Emotion: <strong style="color: red;"><%= detected_emotion %></strong></h2>
          <% } %>
      <% } %>
    </div>

    <!-- Risk Assessment & Stress Management -->
    <div class="progress-section">
      <div class="progress-container">
        <h3>Risk Assessment</h3>
        <div class="progress-bar">
          <%if (risk_assessment == "No risk") { %>
              <div class="progress" style="width: 1%; background-color: #4CAF50;"></div>
              <div style="text-align: left; font-weight: bold;"><%- risk_assessment%></div>
<!--           
          <% } else if (risk_assessment == "Medium") { %>
              <div class="progress risk-medium" style="width: 50%; background-color: yellow;"></div>
              <div style="text-align: left; font-weight: bold;"><%- risk_assessment%></div> -->
          <% } else { %>
              <div class="progress risk-high" style="width: 80%; background-color: red;"></div>
              <div style="text-align: left; font-weight: bold;"><%- risk_assessment%></div>
          <% } %>
        </div>
      </div>

      <div class="progress-container">
        <h3>Stress Score</h3>
        <div class="progress-bar">
          <% if (stress_management_score == "Low") { %>
              <div class="progress" style="width: 20%; background-color: #4CAF50;"></div>
              <div style="text-align: left; font-weight: bold;"><%- stress_management_score%></div>
          <% } else if (stress_management_score == "Medium") { %>
              <div class="progress stress-medium" style="width: 50%; background-color: yellow;"></div>
              <div style="text-align: left; font-weight: bold;"><%- stress_management_score%></div>
          <% } else { %>
              <div class="progress stress-high" style="width: 80%; background-color: red;"></div></div>
              <div style="text-align: left; font-weight: bold;"><%- stress_management_score%></div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Journal Prompts -->
    <div class="journal-prompt">
      <h4>Journal Prompt</h4>
      <p> <%- journal_prompts.replace(/\n/g, '<br>') %> </p>
    </div>

    <!-- Music Player -->
    <div id="musicPlayer">
      <% if (music_recommendation) { %>
          <iframe src="https://open.spotify.com/embed/playlist/<%= music_recommendation %>"></iframe>
      <% } %>
    </div>

  </div>





  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</body>

</html>