<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Detail</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

  <style>
    .button-container {
      display: flex;
      gap: 10px;
      /* Adjust the gap as needed */
    }
  </style>
</head>

<body>

  <!-- nav -->
  <%- include('nav', { isAuthenticated: isAuthenticated }) %>


    <div class="container" style="max-width: 800px; margin-top: 100px;">
      <h4 class="mt-4 mb-4"><strong>Details</strong></h4>

      <div class="card p-3" style="width: 100%; text-align: justify;">
        <div class="card-body">
          <div class="card-title">
            <%= detailData.title %>
          </div>
          <div class="card-subtitle mb-2 text-muted">
            <%= new Date(detailData.date).toDateString() %>
          </div>

          <!-- Using Bootstrap 'btn-lg' class for larger buttons -->
          <!-- Custom style for wider buttons -->

          <div class="button-container mt-3">
            <a class="btn btn-sm btn-outline-secondary" style="width: 100px;"
              href="../edit/<%= detailData._id %>">Edit</a>
            <a class="btn btn-sm btn-outline-secondary" style="width: 100px;" href="../list">List</a>

            <form action="/delete?_method=DELETE" method="POST">
              <input type="hidden" name="id" value="<%= detailData._id %>">
              <button type="submit" class="btn btn-sm btn-outline-danger p" style="width: 100px;">Delete</button>
            </form>




          </div>





        </div>
      </div>
    </div>





    <!-- cnd 방식 제이쿼리 설치법 -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"></script>

</body>

</html>