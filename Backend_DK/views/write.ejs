<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Write</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>

    <!-- nav -->
    <%- include('nav', { isAuthenticated: isAuthenticated }) %>

    <div class="container" style="max-width: 800px; margin-top: 100px;">

      <h4 class="container mt-4"><strong>Write</strong></h4>

      <div class="container mt-3">
          <!-- post when press submit  -->
          <form action="/add" method="POST">
              <div class="form-group">
                  <label>How was your day?</label>
                  <!-- <input type="text" class="form-control" name="title"> -->
                  <textarea class="form-control mt-2" name="title" rows="10" required></textarea>
              </div>
              <div class="form-group mt-2">
                  <label>Date</label>
                  <input type="datetime-local" class="form-control mt-2" name="date" required>
              </div>
              <button type="submit" class="btn btn-outline-secondary  mt-5">Submit</button>
          </form>
      </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>