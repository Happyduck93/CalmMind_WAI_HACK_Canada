<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/mycss.css">

</head>

<body>
  <!-- nav -->
  <%- include('nav.html') %>

    <div class="container mt-4" style="max-width: 800px;">
      <h4 class="container mt-4"><strong>Journals</strong></h4>

      <!-- search function UI -->
      <div class="container input-group mb-2 mt-4">
        <input class="form-control" id="search-input">
        <button class="input-group-append btn" style="background-color: #C7DCA7;" id="search">Search</button>
      </div>

      <!-- reqest GET when search button is pressed + send data as query string -->
      <script>
        $('#search').click(function () {
          var userInput = $('#search-input').val();
          window.location.replace('/search?value=' + userInput)
        });
      </script>

      <!-- show journals -->
      <div class="container mt-4">
        <% posts.forEach(function(post) { %>
          <div class="post-list-item" style="text-align: justify;">
            <div class="mb-2  ">
              <!-- Link to the details page -->
              <a href="/detail/<%= post._id %>" class="hover-link">
                <%= post.title %>
              </a>
            </div>
            <div class="text-secondary">
              <%= post.date.toDateString() %>
            </div>
          </div>
          <% }); %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"></script>
</body>

</html>